<div class="container">
    <h1>New Game</h1>
    <div class="cards">
        <% @letters.each do |letter| %>
            <div class="card">
                <p class="letter-card"> <%= letter %></p>
            </div>
        <% end %>
    </div>
    <form action="score" method="post" class="form-group mt-5">
        <label for="text">What is the longest word you can find?</label>
        <div class="d-flex col-5">
            <input type="text" name="word" class="form-control col-4" placeholder="word..">
            <button type="submit" class="form-control btn btn-primary">Play</button>
        </div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :grid, @letters %> 
        <%= hidden_field_tag :start_time, @started_at %> 
    </form>
</div>

